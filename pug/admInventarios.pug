  main.container
    section 
      h1.title Compañía de Almacenamiento y Logística S.A "CA&L"
      div 
        picture 
          img.imgHeader.img-fluid(src="/assets/administracion-inventarios.jpg")
    section 
    hr
    br
    .grid 
      .shadow.g-col-6 
        .sahdow 
          picture 
            img(src="/assets/adminInventarios.png" alt="")
